.menu
  min-height 100vh

  .header
    text-align center
    background $shaft
    padding 20px 0

  .photo
    width 100%
    height 100%
    max-width 60px
    max-height 60px
    border-radius 50%

  .name
    font-size rem(18px)
    color $white
    font-weight 400

  .role
    font-size rem(14px)
    color $white

  .link
    font-size rem(14px)
    color $shaft
    display block
    font-weight 500
    padding 15px 20px

  .link-icon
    width 30px
