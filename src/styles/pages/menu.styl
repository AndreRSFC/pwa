.menu
  min-height 100vh
  display block

  &--hidden
    display none

  &__header
    text-align center
    background $shaft
    padding 20px 0

  &__photo
    width 100%
    height 100%
    max-width 60px
    max-height 60px
    border-radius 50%

  &__name
    font-size rem(18px)
    color $white
    font-weight 400

  &__role
    font-size rem(14px)
    color $white

  &__link
    font-size rem(14px)
    color $shaft
    display block
    font-weight 500
    padding 15px 20px
    cursor pointer

    &__icon
      font-size rem(18px)
      margin-right 10px
      vertical-align middle
