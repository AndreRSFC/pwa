.main
  display flex

  .menu
    width 100%
    max-width 250px

  .content
    width 100%
    left 250px
    position fixed

    &--fullable
      position initial
      width 100%

  .bar
    width 100%
    height 50px
    background $black
    position relative

  .icon
    color $white
    position absolute
    left 15px
    top 50%
    transform translateY(-50%)
    cursor pointer
    font-size rem(24px)

  .title
    color $white
    font-weight 100
    font-size rem(18px)
    width 100%
    text-align center
    line-height 50px
