@font-face
  font-style normal
  font-weight normal
  font-family 'icomoon'
  src: url('../fonts/icomoon.eot?na98l4')
  src: url('../fonts/icomoon.eot?na98l4#iefix') format('embedded-opentype'),
       url('../fonts/icomoon.ttf?na98l4') format('truetype'),
       url('../fonts/icomoon.woff?na98l4') format('woff'),
       url('../fonts/icomoon.svg?na98l4#icomoon') format('svg')

[class^="icon--"],
[class*=" icon--"]
  font-family 'icomoon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon
  &--menu:before
    content "\e902"

  &--marker:before
    content "\e900"

  &--skateboarder:before
    content "\e901"

  &--plus:before
    content "\f067"

  &--trophy:before
    content "\f091"

  &--map:before
    content "\f279"

  &--shopping:before
    content "\f290"
