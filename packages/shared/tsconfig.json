{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "./dist",
    "sourceMap": true,
    "pretty": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ]
  },
  "typeRoots": [
    "node_modules/@types",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
